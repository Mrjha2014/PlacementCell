<div class="container mt-4">
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center">
            <h2>List of Interviews</h2>
            <a href="/interviews/add" class="btn btn-primary">Add Interview</a> <!-- Add Interview Button -->
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Company</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Status</th>
                    <th>Students</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% interviews.forEach((interview)=> { %>
                    <tr onclick="location.href='/interviews/<%= interview._id%>/applicants '" style="cursor: pointer;">

                        <td>
                            <%= interview.company %>
                        </td>
                        <td>
                            <%= interview.date %>
                        </td>
                        <td>
                            <%= interview.time%>
                        </td>
                        <td>
                            <%= interview.status %>
                        </td>
                        <td>

                        </td>
                        <td>

                            <button class="btn btn-primary">Edit</button>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>

    </div>